# Skin AI Assistant Environment Configuration
# Copy this file to .env and customize as needed

# Port Configuration (auto-detected if not set)
BACKEND_PORT=8000
UI_PORT=8501
ADMIN_PORT=8601

# API URL (auto-configured if not set)
SKINAI_API_URL=http://127.0.0.1:8000

# Database Configuration
# SQLite (default)
SKINAI_DB_URL=sqlite:///skin_ai.db
# PostgreSQL (production)
# SKINAI_DB_URL=postgresql://user:password@localhost/skinai
# MySQL
# SKINAI_DB_URL=mysql://user:password@localhost/skinai

# Logging Level
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=models/best/skin_model.onnx
LABELS_PATH=models/best/class_names.txt

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Security (for production)
# SECRET_KEY=your-secret-key-here
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Settings
# DEBUG=False
# ENVIRONMENT=production
